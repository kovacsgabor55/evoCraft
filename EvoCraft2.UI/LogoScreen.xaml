<Page x:Class="EvoCraft2.UI.LogoScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EvoCraft2.UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LogoScreen" Loaded="Page_Loaded">

    <Grid Background="Black">
        <Image Name="LizzardLogo" Source="{StaticResource LizzardLogoBitmapImage}" Margin="250,250,250,400" Opacity="0"/>
        <Image Name="EvoCraftLogo" Source="{StaticResource EvoCraftLogoBitmapImage}" Margin="250" Opacity="0"/>
        <TextBlock Name="PresentsTextBlock" Text="Presents" FontSize="70" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="780,0,780,250" Opacity="0"/>
    </Grid>
</Page>
